<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cafeteria" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Background brand color. -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Header style -->
    <style name="HeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:text">TextView</item>
    </style>

    <style name="HeaderImageView">
        <item name="android:src">@drawable/back_arrow</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Main Activity style -->
    <style name="MainButtons" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Group Activity style -->
    <style name="GroupButtons" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Details Activity style -->
    <style name="DetailsImgView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="DetailsTextViews" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="DetailsTextViewWebsite" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textColorLink">@color/secondary</item>
    </style>

    <!-- Button category style -->
    <style name="CategoryButtons" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>