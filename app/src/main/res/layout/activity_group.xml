<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity"
    android:orientation="vertical">

    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-30dp">

            <Button
                style="@style/GroupButtons"
                android:id="@+id/button_group_student1"
                android:background="@drawable/round_button"
                android:text="@string/txt_btn_student1" />

            <Button
                style="@style/GroupButtons"
                android:id="@+id/button_group_student2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_button"
                android:text="@string/txt_btn_student2" />

            <Button
                style="@style/GroupButtons"
                android:id="@+id/button_group_student3"
                android:background="@drawable/round_button"
                android:text="@string/txt_btn_student3" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>